{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noImplicitReturns": true,
    "declaration": true,
    "outDir": "./lib",
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
